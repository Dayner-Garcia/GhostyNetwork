@model GhostyNetwork.Core.Application.ViewModels.Users.ResetPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutInit";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h3 class="text-center mb-4">Recuperar Contraseña</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            <div class="mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="UserName" name="UserName" asp-for="UserName" placeholder="Nombre de usuario" required />
                    <label for="UserName">Nombre de usuario</label>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">Enviar correo de restablecimiento</button>
        </form>

        <div class="text-center mt-4">
            <a href="@Url.Action("Login", "User")" class="text-decoration-none">¿Ya recuerdas tu contraseña? <strong>Inicia sesión</strong></a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
